@inject NavigationManager NavManager

<style>
    .course-popup {
    position: fixed;
    top: 25%;
    bottom: 25%;
    left: 30%;
    right: 30%;
    background-color: white;
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
    z-index: 1000;
    overflow: hidden;
    }

    .course-page {
    position: relative;
    display: flex;
    width: 100%;
    height: 100%;
    align-items: center;
    }

    .left-container {
    height: 90%;
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 0 5% 0 2% 
    }

    .title {
    font-size: 1.5vw;
    line-height: 2vw;
    font-weight: 600;
    margin: 0
    }

    .brief {
    font-size: 1vw;
    line-height: 1.5vw;
    font-weight: 400;
    margin: 0
    }

    .start {
    height: 15%;
    display: flex;
    font-size: 1.5vw;
    font-weight: 600;
    justify-content: flex-start;
    align-items: center;
    overflow: hidden
    }

    .time {
    object-fit: cover;
    object-position: center;
    width: 15%;
    }

    .time-text {
    width: 50%;
    margin: 0 0 0 3%
    }

    .begin {
    width: 35%;
    background-color: #60100B;
    color: white;
    border-radius: 0.5vw;
    margin: 20% 0;
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
    transition: 0.2s
    }

    .begin:hover {
    background-color: #D21404
    }

    .right-container {
    max-width: 400px;
    object-fit: cover;
    object-position: center
    }

    .exit {
    position: absolute;
    top: 25px;
    right: 25px;
    width: 50px;
    height: 50px;
    cursor: pointer;
    z-index: 100
    }
</style>

<div class="course-popup" style="display:@(IsVisible ? "flex" : "none")">
    <div class="course-page">
        <div class="left-container">
            <p class="title">@Name</p>
            <p class="brief">Данный курс предназначен для всех сотрудников Ростелеком</p>
            <div class="start">
                <img class="time" src="images/time.png"/>
                <p class="time-text">2:30</p>
                <button class="begin" @onclick="begin">Начать >></button>
            </div>
        </div>
        <div class="right-container">
            <img src="images/learning.png"/>
        </div>
        <img class="exit" src="images/exit.png" @onclick="Close" />
    </div>
</div>

@code {
    [Parameter] public string Name { get; set; }
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public EventCallback<bool> IsVisibleChanged { get; set; }

    private void Close()
    {
        IsVisible = false;
        IsVisibleChanged.InvokeAsync(IsVisible);
    }

    private void begin() {
        IsVisible = false;
        IsVisibleChanged.InvokeAsync(IsVisible);
        NavManager.NavigateTo("CoursePage");
    }
}